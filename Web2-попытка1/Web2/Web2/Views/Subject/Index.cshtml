@model IEnumerable<Web2.Models.SubjectModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Добавить изображение", "Create", "Subject")
</p>
<p>
    @Html.ActionLink("Удалить предмет", "Delete", "Subject")
</p>
<table>
    <tr>
        <th>ID</th>
        <th>Название</th>
        <th>Картинка</th>
        <th>text1</th>
        <th>text2</th>
        <th>Имя предмета</th>
        <th>Ссылка видео</th>
        <th>bilibirda</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                          + Convert.ToBase64String(item.Image) + "\" />")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClickText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlVideo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bilibirda)
            </td>
        </tr>
    }

</table>